#!/usr/bin/env zsh

if (($#<1)); then
    print -- "usage:\tgit <operation> <arguments>"
    print -- "operations:"
    print -P -- "\t%Bcreate-project%b\tCreate a new project"
    print -P -- "\t%Bcreate-controller%b\tCreate a new controller"
    print -P -- "\t%Bcreate-model%b\tCreate a new model"
    print -P -- "\t%Bcreate-view%b\tCreate a new view"
    exit 1
fi

directory=$0:h
if [[ "" = $directory ]]; then
    rz='rubyzome'
else
    rz=$directory'/rubyzome'
fi

action=$1
shift

${rz}-${action} $@

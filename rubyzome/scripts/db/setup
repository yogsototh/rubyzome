#!/usr/bin/env zsh

for info in $( egrep '\$db_.*=' global_config.rb ); do
    print $info[2,-1]
    eval $info[2,-1]
done
db_admin="${db_user}admin"

print "db_admin='"$db_admin"'"

print "Enter your mysql root password"
mysql -u root -p <<END
CREATE DATABASE ${db_database};
CREATE USER '${db_admin}'@'${db_host}' IDENTIFIED BY '${db_admin}';
GRANT ALL on ${db_database}.* TO '${db_admin}'@'${db_host}' ;
CREATE USER '${db_user}'@'${db_host}' IDENTIFIED BY '${db_user}';
GRANT SELECT,INSERT,UPDATE,DELETE,CREATE,DROP on ${db_database}.* TO '${db_user}'@'${db_host}';
END
